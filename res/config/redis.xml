<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE xml>
<redis>
    <!-- 主机 -->
    <host>127.0.0.1</host>
    <!-- 端口 -->
    <port>16379</port>
    <!-- 超时时间 -->
    <timeout>2000</timeout>
    <!-- 用户名 -->
    <user></user>
    <!-- 密码 -->
    <password></password>
    <!-- 数据库 -->
    <database>0</database>
    <!-- 最大空闲连接数 -->
    <max_idle>100</max_idle>
    <!-- 最大连接数 -->
    <max_total>1000</max_total>
    <!-- 是否获取连接的时候检查有效性 -->
    <test_on_borrow>true</test_on_borrow>
    <!-- 是否空闲时检查有效性 -->
    <test_while_idle>true</test_while_idle>
</redis>
